
@{
    ViewBag.Title = "Videos";
}

<h2>Videos</h2>
<div class=" container">
    <div class="row-fluid">

        @foreach (var videoFile in Model)
        {


            <div class=" col-md-4">
                <div class="card card-outline-info d-flex h-100" style="width: 18rem;">
                    <a href="/Media/Videos/@videoFile.FileName"
                       data-fancybox="gallery"
                       data-caption="Optional caption">
                        <video class="card-img-top" height="180" width="230">
                            <source src="/Media/Videos/@videoFile.FileName" type="video/mp4">
                        </video>
                    </a>
                    <p>@videoFile.FileName</p>
                    <input type="button" class="btn btn-success" value="Download"
                           onclick="location.href='@Url.Action("DownloadFile", "Videos", new { fileName = videoFile.FileName})'" />
                    <input type="button" class="btn btn-danger" value="Delete"
                           onclick="location.href='@Url.Action("DeleteFile", "Videos", new { fileName = videoFile.FileName})'" />
                </div>
            </div>



        }
    </div>
</div>

